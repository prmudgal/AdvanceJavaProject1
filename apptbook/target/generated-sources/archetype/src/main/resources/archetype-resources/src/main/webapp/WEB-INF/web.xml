#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Appointment Book REST Service</display-name>
  <servlet>
    <servlet-name>AppointmentBookServlet</servlet-name>
    <servlet-class>${package}.AppointmentBookServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AppointmentBookServlet</servlet-name>
    <url-pattern>/appointments</url-pattern>
  </servlet-mapping>
</web-app>
